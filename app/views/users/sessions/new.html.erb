
<div class = "container">
  <div class = "row justify-content-center mt-5">
    <div class = "box">
      
      <h2>ログイン</h2>
      
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      
        <div class="form-group">
          
          <i class="far fa-envelope"> <%= f.label :mail_address %> </i><br />
          <%= f.email_field :email, placeholder:"メールアドレス", autofocus: true, autocomplete: "email", class: "form-control" %>
          
        </div>
      
        <div class="form-group">
          
          <i class="fas fa-key"> <%= f.label :password %> </i><br />
          <%= f.password_field :password, placeholder:"パスワード", autocomplete: "new-password", class: "form-control" %>
          
        </div>
      
        <% if devise_mapping.rememberable? %>
        
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
          
        <% end %>
      
        <div class="actions">
          <%= f.submit "Log in", class: "button" %>
        </div>
        
      <% end %>
      
    </div>
  </div>
  
  <div class = "row justify-content-center mt-5">
    <%= link_to "アカウントをお持ちでない方はこちらへ", "new_user_registration_path", class: "button2" %>
  </div>

</div>