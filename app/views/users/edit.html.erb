

<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      
    <h2>User info</h2>
    
    <%= form_with model:@user, local:true do |f| %>
      <%= render 'layouts/errors', obj: @user %>
      
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control name" %>
      </div>
      
      <div class="form-group">
        <%= f.label :image %>
        <%= f.attachment_field :image, class: "form-control-file user_image" %>
      </div>
      
      <div class="form-group">
        <%= f.label :genre %>
        <%= f.collection_select :genre_id, Genre.all, :id, :name, class: "form-control" %>
      </div>
      
      <div class="form-group">
        <%= f.label :Discode_ID %>
        <%= f.text_area :code, class: "form-control introduction" %>
      </div>
      
      <div class="form-group">
        <%= f.label :introduction %>
        <%= f.text_area :introduction, class: "form-control introduction" %>
      </div>
      
      <div class="form-group">
        <%= f.submit class: 'btn btn-success' %>
      </div>
      
    <% end %>
    
    <table class "my-5">
      
      <div class = "mt-5">
        <%= link_to "戻る", user_path(@user), class: 'btn btn-primary btn-block' %>
      </div>
      
      <div class = "mt-2">
        <%= link_to "退会する", withdrow_users_path(@user), class: "btn btn-danger btn-block" %>
      </div>
      
    </table>
  </div>
</div>