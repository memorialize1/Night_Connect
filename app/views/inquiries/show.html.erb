
<div class = "container">
  <div class = "row mt-5">
    <div class = "offset-2 col-8">
      
      <h2 class = "text-center">件名＜<%= @inquiry.title %>＞</h2>
      
      <h5> <strong class = "mt-3">内容</strong> </h5>
      <div class = "box2">
        <%= @inquiry.inquiry %>
      </div>
      
    </div>
  </div>
</div>

<div class = "container">
  <div class = "row mt-5">
    <div class = "offset-2 col-8">
      
      <h2 class = "text-center">
        <strong>回答</strong>
      </h2>
      
      <% if @inquiry.answers.present? %>
      
        <div class = "box2">
          
          <% @inquiry.answers.each do |answer| %>
          
            <h2 class = "text-center">件名＜<%= answer.title %>＞</h2>
            
            <p>内容</p>
            
            <div class = "box2">
              
              <%= answer.answer %>
            </div>
          
          <% end %>
          
        </div>
      
      <% end %>
      
    </div>
  </div>
</div>

<footer class = "mt-5">
  <div class = "container">
    <div class = "row">
      <div class = "offset-2 col-8">
        <%= link_to "戻る", inquiries_path %>
      </div>
    </div>
  </div>
  
</footer>